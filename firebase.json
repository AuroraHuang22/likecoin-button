{
  "functions": {
    "source": "functions/dist",
    "predeploy": [
      "npm --prefix functions run lint && npm --prefix functions run package && npm --prefix src run lint && npm --prefix src run build"
    ]
  },
  "hosting": {
    "predeploy": [
      "rm -rf public/ && cp -r functions/nuxt/dist/ public/"
    ],
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssrapp"
      }
    ]
  }
}
